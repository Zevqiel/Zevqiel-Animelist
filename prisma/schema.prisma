generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Collection {
  id                  Int @id @default(autoincrement())
  anime_mal_id        String
  user_email          String
  image_url           String
  Title               String
  Year                Int

  @@unique([user_email, anime_mal_id])
}

model Comment {
  id                  Int @id @default(autoincrement())
  anime_mal_id        String
  user_email          String
  comment             String
  username            String
  anime_title         String
  rating              Float?
}

model Carousel {
  id                  Int @id @default(autoincrement())
  anime_mal_id        String
  image_url           String
  title               String
  sub_title           String
}
